layout (text="color")
  grid
    {
     <T                                                       >
      [f00       |f01       |f02       |f03       |f04       ]
      [f00       |f01       |f02       |f03       |f04       ]
      [f00       |f01       |f02       |f03       |f04       ]
      [f00       |f01       |f02       |f03       |f04       ]
    }
  end --grid
end --layout

attributes
  edit f00 = formonly.p_start, title="start";
  textedit f01 = formonly.p_alpha, style="xml", sizepolicy=fixed, scrollbars=none;
  textedit f02 = formonly.p_beta, style="html", sizepolicy=fixed, scrollbars=none;
  textedit f03 = formonly.p_gamma, style="html", sizepolicy=fixed, scrollbars=none;
  textedit f04 = formonly.p_end, sizepolicy=fixed, stretch=x, title="end";
end --attributes

instructions
  screen record color_arr(p_start thru p_end)
end instructions